        {
            "name": "Buscar Locais por Texto",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/locais?q=Igreja",
                    "host": [
                        "{{baseUrl}}"
